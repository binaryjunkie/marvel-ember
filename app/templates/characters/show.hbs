<section class="header">
    <h1>Character Details</h1>
</section>
<section class="character-detail resource-detail">
    <article class="detail-image">
        {{marvel-image size="xlarge" shape="portrait" path=model.thumbnail.path extension=model.thumbnail.extension}}
    </article>
    <article class="details">
        <h2 class="name">{{model.name}}</h2>  
        <p class="description">
            {{#if model.description}}
                {{{model.description}}}
            {{else}}
                <span class="no-data">No description available</span>
            {{/if}}
        </p>
    </article>
</section>